{
  "aliases": {
    "cohort_centric": {}
  },
  "settings": {
    "index.number_of_shards": 3,
    "index.max_result_window": 300000,
    "analysis": {
      "analyzer": {
        "autocomplete_analyzed": {
          "filter": [
            "lowercase",
            "edge_ngram"
          ],
          "tokenizer": "standard"
        },
        "autocomplete_prefix": {
          "filter": [
            "lowercase",
            "edge_ngram"
          ],
          "tokenizer": "keyword"
        },
        "lowercase_keyword": {
          "filter": [
            "lowercase"
          ],
          "tokenizer": "keyword"
        }
      },
      "filter": {
        "edge_ngram": {
          "max_gram": 20,
          "min_gram": 20,
          "side": "front",
          "type": "edge_ngram"
        }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "date_detection": false,
    "properties": {
      "cohort_autocomplete": {
        "fields": {
          "analyzed": {
            "analyzer": "autocomplete_prefix",
            "search_analyzer": "lowercase_keyword",
            "type": "text"
          },
          "lowercase": {
            "analyzer": "autocomplete_prefix",
            "type": "text"
          },
          "prefix": {
            "analyzer": "autocomplete_prefix",
            "search_analyzer": "lowercase_keyword",
            "type": "text"
          }
        },
        "type": "keyword"
      },
      "cohort_name": {
        "type": "keyword",
        "copy_to": [
          "cohort_autocomplete"
        ]
      },
      "countries": {
        "type": "keyword",
        "copy_to": [
          "cohort_autocomplete"
        ]
      },
      "pi_lead": {
        "type": "keyword",
        "copy_to": [
          "cohort_autocomplete"
        ]
      },
      "website": {
        "type": "keyword"
      },
      "data_types": {
        "type": "keyword"
      },
      "cohort_attributes": {
        "properties": {
          "aims_and_objectives": {
            "type": "keyword"
          },
          "study_design": {
            "type": "keyword"
          },
          "enrollment_criteria": {
            "type": "keyword"
          },
          "number_of_participants": {
            "type": "integer"
          },
          "timeline": {
            "type": "keyword"
          },
          "demographic_variables": {
            "type": "keyword"
          },
          "population_variables": {
            "type": "keyword"
          }
        }
      },
      "biosample": {
        "properties": {
          "biosample_types": {
            "type": "keyword"
          },
          "biosample_variables": {
            "type": "keyword"
          }
        }
      },
      "laboratory": {
        "properties": {
          "genomic_variables": {
            "type": "keyword"
          },
          "microbiological_variables": {
            "type": "keyword"
          }
        }
      }
    }
  }
}